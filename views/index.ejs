<!-- Credits Section -->
<section id="credits" class="py-20 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-serif font-bold mb-4">
        <%= t('credits.title') %>
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        <%= t('credits.subtitle') %>
      </p>
    </div>

    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% credits.forEach((credit) => { %>
        <div
          class="bg-white dark:bg-gray-900 rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow"
        >
          <% if (credit.image) { %>
          <img
            src="<%= credit.image %>"
            alt="<%= credit.title %>"
            class="w-full h-48 object-cover"
            loading="lazy"
          />
          <% } %>
          <div class="p-6">
            <div class="flex items-center justify-between mb-3">
              <span class="text-sm font-semibold text-accent"
                ><%= credit.year %></span
              >
              <span
                class="text-xs px-2 py-1 bg-gray-100 dark:bg-gray-800 rounded"
                ><%= credit.type %></span
              >
            </div>
            <h3 class="text-xl font-bold mb-2"><%= credit.title %></h3>
            <p class="text-gray-600 dark:text-gray-400 mb-2">
              <strong><%= t('credits.role') %>:</strong> <%= credit.role %>
            </p>
            <p class="text-sm text-gray-500 dark:text-gray-500 mb-3">
              <strong><%= t('credits.director') %>:</strong> <%= credit.director
              %>
            </p>
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
              <%= credit.description %>
            </p>
            <% if (credit.imdb) { %>
            <a
              href="<%= credit.imdb %>"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-1 text-accent hover:text-yellow-600 transition-colors text-sm font-semibold"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M22.3 5.6h-3.8v12.8h3.8V5.6zm-5.5 0H13l1.3 8.8-1.3 4h3.8l-1.3-4 1.3-8.8zM8.5 5.6H4.7v12.8h3.8V5.6zm-5.5 0H0v12.8h2.9V5.6z"
                />
              </svg>
              <%= t('credits.view_imdb') %>
            </a>
            <% } %>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </div>
</section>

<!-- Contact Section -->
<section id="contact" class="py-20 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-serif font-bold mb-4">
        <%= t('contact.title') %>
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        <%= t('contact.subtitle') %>
      </p>
    </div>

    <div class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div>
        <form id="contact-form" class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium mb-2"
              ><%= t('contact.form.name') %></label
            >
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent dark:bg-gray-800 dark:text-white"
            />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium mb-2"
              ><%= t('contact.form.email') %></label
            >
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent dark:bg-gray-800 dark:text-white"
            />
          </div>
          <div>
            <label for="subject" class="block text-sm font-medium mb-2"
              ><%= t('contact.form.subject') %></label
            >
            <input
              type="text"
              id="subject"
              name="subject"
              required
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent dark:bg-gray-800 dark:text-white"
            />
          </div>
          <div>
            <label for="message" class="block text-sm font-medium mb-2"
              ><%= t('contact.form.message') %></label
            >
            <textarea
              id="message"
              name="message"
              rows="6"
              required
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent dark:bg-gray-800 dark:text-white resize-none"
            ></textarea>
          </div>
          <button
            type="submit"
            class="w-full px-8 py-4 bg-accent text-gray-900 rounded-lg font-semibold text-lg hover:bg-yellow-500 transition-colors"
          >
            <%= t('contact.form.send') %>
          </button>
          <div
            id="form-message"
            class="hidden p-4 rounded-lg text-center"
          ></div>
        </form>
      </div>

      <!-- Contact Info -->
      <div class="space-y-8">
        <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
          <h3 class="text-xl font-semibold mb-4">
            <%= t('contact.info.title') %>
          </h3>
          <div class="space-y-4">
            <div>
              <p class="font-semibold text-accent mb-2">
                <%= t('contact.info.agent') %>
              </p>
              <p class="text-lg mb-1"><%= t('contact.info.agent_name') %></p>
              <p class="text-gray-600 dark:text-gray-400">
                <a
                  href="mailto:<%= t('contact.info.agent_email') %>"
                  class="hover:text-accent transition-colors"
                >
                  <%= t('contact.info.agent_email') %>
                </a>
              </p>
              <p class="text-gray-600 dark:text-gray-400">
                <%= t('contact.info.agent_phone') %>
              </p>
            </div>
            <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
              <p class="font-semibold text-accent mb-2">
                <%= t('contact.info.direct') %>
              </p>
              <p class="text-gray-600 dark:text-gray-400">
                <a
                  href="mailto:<%= t('contact.info.email') %>"
                  class="hover:text-accent transition-colors"
                >
                  <%= t('contact.info.email') %>
                </a>
              </p>
              <p class="text-gray-600 dark:text-gray-400">
                <%= t('contact.info.phone') %>
              </p>
            </div>
          </div>
        </div>

        <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
          <h3 class="text-xl font-semibold mb-4">
            <%= t('contact.social.title') %>
          </h3>
          <div class="flex gap-4">
            <a
              href="https://www.imdb.com/name/nm15830323/"
