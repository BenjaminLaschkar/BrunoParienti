<!-- Hero Section -->
<section
  id="home"
  class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 via-gray-800 to-black text-white pt-20"
>
  <div class="container mx-auto px-4 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Hero Image -->
      <div class="order-2 lg:order-1">
        <div class="relative max-w-2xl lg:max-w-3xl mx-auto">
          <div
            class="rounded-lg shadow-2xl w-full overflow-hidden aspect-[4/5]"
          >
            <img
              src="/img/bruno-hero.jpg?v=<%= Date.now() %>"
              alt="Bruno Parienti - Acteur"
              class="w-full h-full object-cover"
            />
          </div>
          <div
            class="absolute -bottom-6 -right-6 w-32 h-32 bg-accent rounded-lg -z-10 opacity-20"
          ></div>
        </div>
      </div>

      <!-- Hero Content -->
      <div class="order-1 lg:order-2 text-center lg:text-left">
        <h1
          class="text-5xl md:text-7xl font-serif font-bold mb-6 animate-fade-in"
        >
          <%= t('hero.name') %>
        </h1>
        <p class="text-2xl md:text-3xl text-accent mb-8 animate-slide-up">
          <%= t('hero.tagline') %>
        </p>
        <div
          class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start"
        >
          <a
            href="#reel"
            class="px-8 py-4 bg-accent text-gray-900 rounded-lg font-semibold text-lg hover:bg-yellow-500 transition-all transform hover:scale-105 shadow-lg"
          >
            <%= t('hero.cta.reel') %>
          </a>
          <a
            href="#contact"
            class="px-8 py-4 border-2 border-white text-white rounded-lg font-semibold text-lg hover:bg-white hover:text-gray-900 transition-all transform hover:scale-105"
          >
            <%= t('hero.cta.contact') %>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2">
    <a href="#about" class="block animate-bounce">
      <svg
        class="w-8 h-8 text-white"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"
        />
      </svg>
    </a>
  </div>
</section>

<!-- About Section -->
<section id="about" class="py-20 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-serif font-bold mb-4">
          <%= t('about.title') %>
        </h2>
        <p class="text-xl text-accent"><%= t('about.subtitle') %></p>
      </div>

      <div class="prose prose-lg dark:prose-invert max-w-none mb-12">
        <p class="text-lg leading-relaxed mb-6"><%= t('about.bio') %></p>
        <p class="text-lg leading-relaxed mb-8">
          <%= t('about.bio_extended') %>
        </p>
      </div>

      <div class="text-center mb-12">
        <a
          href="<%= lang === 'he' ? '/resume/Bruno Parienti - CV Acting HEBR.docx' : '/resume/Bruno Parienti - CV Acting ENG.docx' %>"
          download
          class="inline-flex items-center gap-2 px-6 py-3 bg-accent text-gray-900 rounded-lg font-semibold hover:bg-yellow-500 transition-colors"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
            />
          </svg>
          <%= t('about.download_cv') %>
        </a>
      </div>

      <!-- Skills & Info Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12">
        <!-- Skills -->
        <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
          <h3 class="text-xl font-semibold mb-4">
            <%= t('about.skills.title') %>
          </h3>
          <ul class="space-y-2">
            <% (translations.about?.skills?.items || []).forEach(skill => { %>
            <li class="flex items-start gap-2">
              <svg
                class="w-5 h-5 text-accent mt-1 flex-shrink-0"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"
                />
              </svg>
              <span><%= skill %></span>
            </li>
            <% }); %>
          </ul>
        </div>

        <!-- Languages -->
        <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
          <h3 class="text-xl font-semibold mb-4">
            <%= t('about.languages.title') %>
          </h3>
          <ul class="space-y-2">
            <% (translations.about?.languages?.items || []).forEach(language =>
            { %>
            <li class="flex items-start gap-2">
              <svg
                class="w-5 h-5 text-accent mt-1 flex-shrink-0"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"
                />
              </svg>
              <span><%= language %></span>
            </li>
            <% }); %>
          </ul>
        </div>

        <!-- Training -->
        <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
          <h3 class="text-xl font-semibold mb-4">
            <%= t('about.training.title') %>
          </h3>
          <ul class="space-y-2">
            <% (translations.about?.training?.items || []).forEach(training => {
            %>
            <li class="flex items-start gap-2">
              <svg
                class="w-5 h-5 text-accent mt-1 flex-shrink-0"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"
                />
              </svg>
              <span><%= training %></span>
            </li>
            <% }); %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

