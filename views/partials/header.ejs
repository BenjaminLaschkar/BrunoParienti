<header
  class="fixed top-0 left-0 right-0 bg-white/95 dark:bg-gray-900/95 backdrop-blur-sm shadow-sm z-40 transition-all duration-300"
  id="header"
>
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo / Name -->
      <a
        href="/"
        class="text-2xl font-serif font-bold text-gray-900 dark:text-white hover:text-accent transition-colors"
      >
        Bruno Parienti
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center space-x-8">
        <li><a href="#home" class="nav-link"><%= t('nav.home') %></a></li>
        <li><a href="#about" class="nav-link"><%= t('nav.about') %></a></li>
        <li><a href="#gallery" class="nav-link"><%= t('nav.gallery') %></a></li>
        <li><a href="#credits" class="nav-link"><%= t('nav.credits') %></a></li>
        <li><a href="#contact" class="nav-link"><%= t('nav.contact') %></a></li>
      </ul>

      <!-- Right Actions -->
      <div class="flex items-center gap-4">
        <!-- Theme Toggle -->
        <button
          id="theme-toggle"
          class="p-2 rounded-full hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
          aria-label="<%= t('theme.toggle') %>"
        >
          <svg
            class="w-5 h-5 hidden dark:block"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
            />
          </svg>
          <svg
            class="w-5 h-5 dark:hidden"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
            />
          </svg>
        </button>

        <!-- Language Switcher -->
        <div class="hidden md:flex items-center gap-1">
          <a
            href="/lang/fr"
            class="px-2 py-1 text-xs font-medium border border-gray-300 dark:border-gray-700 rounded hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors <%= lang === 'fr' ? 'bg-gray-100 dark:bg-gray-800' : '' %>"
          >
            FR
          </a>
          <a
            href="/lang/en"
            class="px-2 py-1 text-xs font-medium border border-gray-300 dark:border-gray-700 rounded hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors <%= lang === 'en' ? 'bg-gray-100 dark:bg-gray-800' : '' %>"
          >
            EN
          </a>
          <a
            href="/lang/he"
            class="px-2 py-1 text-xs font-medium border border-gray-300 dark:border-gray-700 rounded hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors <%= lang === 'he' ? 'bg-gray-100 dark:bg-gray-800' : '' %>"
          >
            עב
          </a>
        </div>

        <!-- Mobile Menu Toggle -->
        <button
          id="mobile-menu-toggle"
          class="md:hidden p-2 rounded hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden mt-4 pb-4">
      <ul class="flex flex-col space-y-3">
        <li>
          <a href="#home" class="mobile-nav-link"><%= t('nav.home') %></a>
        </li>
        <li>
          <a href="#about" class="mobile-nav-link"><%= t('nav.about') %></a>
        </li>
        <li>
          <a href="#gallery" class="mobile-nav-link"><%= t('nav.gallery') %></a>
        </li>
        <li>
          <a href="#credits" class="mobile-nav-link"><%= t('nav.credits') %></a>
        </li>
        <li>
          <a href="#contact" class="mobile-nav-link"><%= t('nav.contact') %></a>
        </li>
        <!-- Language switcher for mobile -->
        <li class="pt-2 border-t border-gray-200 dark:border-gray-700">
          <div class="flex gap-2 justify-center">
            <a
              href="/lang/fr"
              class="px-3 py-1 text-sm border border-gray-300 dark:border-gray-700 rounded <%= lang === 'fr' ? 'bg-gray-100 dark:bg-gray-800 font-bold' : '' %>"
              >FR</a
            >
            <a
              href="/lang/en"
              class="px-3 py-1 text-sm border border-gray-300 dark:border-gray-700 rounded <%= lang === 'en' ? 'bg-gray-100 dark:bg-gray-800 font-bold' : '' %>"
              >EN</a
            >
            <a
              href="/lang/he"
              class="px-3 py-1 text-sm border border-gray-300 dark:border-gray-700 rounded <%= lang === 'he' ? 'bg-gray-100 dark:bg-gray-800 font-bold' : '' %>"
              >עב</a
            >
          </div>
        </li>
      </ul>
    </div>
  </nav>
</header>
